---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import CartAdder from "../components/Cart-Adder.svelte";
---

<Layout
    title="Add to cart"
    description="Shopping cart home page"
    viewTransition={false}
>
    <div class="icon">
        <Icon name="whale" width={500} height={500} />
    </div>
    <CartAdder client:load>
        <Icon slot="spinner" name="spinner" width={500} height={500} />
    </CartAdder>
</Layout>

<style>
    .icon {
        width: 65%;
        aspect-ratio: 1 / 1;
        user-select: none;
        margin-inline: auto;
    }
    .icon img {
        -webkit-user-drag: none;
        user-drag: none;
    }
</style>
